{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "baseUrl": ".",
    "paths": {
      "@app/shared/assets": [
        "libs/shared/assets/src/index.ts"
      ],
      "@app/shared/styles": [
        "libs/shared/styles/src/index.ts"
      ],
      "@app/shared/translations": [
        "libs/shared/translations/src/index.ts"
      ],
      "@app/auth": [
        "libs/auth/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}